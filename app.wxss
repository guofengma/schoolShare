/**app.wxss**/
 /* @import "http//at.alicdn.com/t/font_612512_0tguyeebp90jxlxr.css";  */
@import "./common/style/iconfont.wxss";   
@import "./common/style/weui.wxss";
@import "./common/style/zanui.wxss";
/* 去除默认滚动条 */
::-webkit-scrollbar {  
  width: 0;  
  height: 0;  
  color: transparent;  
  display: none;
} 
.iconfont{
  font-size: 30rpx;
}
page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}
.page__ft{
    padding-bottom: 10px;
    text-align: center;
}
.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}
.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
