@import "../../common/style/animation.wxss";

.image {
  box-sizing: border-box;
  width: 750rpx;
  padding: 10rpx 15rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: space-between;
  box-shadow: 0 0 40rpx #f4f4f4 inset;
}

.image-item {
  width: 350rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  background-color: #fff;
  border: 1px solid #e4e4e4;
  box-shadow: 0 20rpx 40rpx #eee;
  overflow: hidden;
  animation: fadeIn 1s;
}

.image-cover, .image-cover-img {
  width: 350rpx;
  height: 508rpx;
}

.image-cover {
  position: relative;
  overflow: hidden;
}

.image-rating {
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50rpx;
  padding-right: 20rpx;
  font-size: 12px;
  text-align: right;
  line-height: 50rpx;
  background-color: rgba(0, 0, 0, 0.65);
  color: #fff;
}

.file-intro {
  padding: 16rpx;
  margin-top: -8rpx;
}

.image-title {
  /* white-space: nowrap; *//* text-overflow: ellipsis;
    overflow: hidden; */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.image-tag {
  width: 100%;
  margin-top: 10rpx;
  display: flex;
  justify-content: flex-start;
}

.image-tag-item {
  padding: 4rpx 6rpx;
  margin-right: 10rpx;
  font-size: 24rpx;
  box-shadow: 0 0 0 1px #ccc;
  border-top: 1px solid #fff;
  border-radius: 10rpx;
  background-color: #fafafa;
  color: #666;
}

.loading-tip {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #ccc;
}

.contributor-info {
  padding: 10rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.contributor-name {
  color: #8590a6;
}

.download{
  text-align: center;
  background-color: #79BD8F;
  color: white;
  margin:0 30rpx 10rpx;
  border-radius: 20rpx;
}
