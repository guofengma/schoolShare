/* component/list-1/list-1.wxss */
@import "../../common/style/iconfont.wxss"; 
.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.list-item {
  padding: 25rpx;
  box-sizing: border-box;
  background-color: white;
  border-bottom: 1px solid #ccc;
  color: #333;
}

.control {
  padding: 0 40rpx;
  display: block;
  text-align: right;
}

.control li {
  display: inline-block;
  padding: 0 20rpx;
}

.control text {
  vertical-align: bottom;
  font-size: 25rpx;
}
.control .iconfont.act{
  color: #FF6138;
}
.control i {
  vertical-align: center;
}

.list-content {
  clear: left;
  padding-top: 20rpx;
}

.avatar, .user-data {
  float: left;
}

.nickname {
  font-size: 34rpx;
  line-height: 60rpx;
}

.item-title {
  font-size: 30rpx;
  line-height: 40rpx;
  /* font-weight: bold; */
  text-overflow: ellipsis;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  margin-bottom: 10rpx;
}

.item-dec {
  font-size: 28rpx;
  line-height: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.from {
  color: #ddd;
  font-size: 25rpx;
  line-height: 40rpx;
}

.control .iconfont {
  padding: 0 10rpx;
}
