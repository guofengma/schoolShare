/* component/list-1/list-1.wxss */
@import "../../common/style/iconfont.wxss"; 
@import "../../common/style/weui.wxss";
.share-btn{
  display: inline;  
  background: unset; 
  color: inherit;
  line-height: inherit;
  font-size: inherit;
}
button::after{
  border:none;
  }
.img-wrap{
  display: flex;
  flex-wrap:wrap;
} 
.img{
  flex:1;
  min-width:33.3%;  
  height:250rpx; 
  background-size: contain;
  background-repeat: no-repeat;
}
.option-more{
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  top:-20rpx;
  right: -10rpx;
  border-left: 2rpx solid #ccc;
  border-bottom:  2rpx solid #ccc;
  transform: rotate(-45deg);
}
.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.user-info {
 height: 100rpx;
  position: relative; 
}
.list-item {
  padding: 25rpx;
  box-sizing: border-box;
  background-color: white;
  /* border-bottom: 1px solid #ccc; */
  color: #333;
  margin: 15rpx 0;
}

.control {
  padding: 0 40rpx;
  display: block;
  text-align: right;
}

.control li {
  display: inline-block;
  padding: 0 20rpx;
}

.control text {
  vertical-align: bottom;
  font-size: 25rpx;
}
.control .iconfont.act{
  color: #FF6138;
}
.control i {
  vertical-align: center;
}

.list-content {
  clear: both;
  padding-top: 20rpx;
}

.avatar, .user-data {
  float: left;
}

.nickname {
  font-size: 34rpx;
  line-height: 60rpx;
}

.item-title {
  font-size: 30rpx;
  line-height: 40rpx;
  /* font-weight: bold; */
  text-overflow: ellipsis;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  margin-bottom: 10rpx;
}

.item-dec {
  font-size: 28rpx;
  line-height: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.from {
  color: #ddd;
  font-size: 25rpx;
  line-height: 40rpx;
}

.control .iconfont {
  padding: 0 10rpx;
}
.option-more{
  float: right;
}

.weui-media-box__info__meta.act{
 color: #f59763;
}
.weui-media-box__info{
  display: flex;
  line-height: 1.2em;
}
.weui-media-box__info__meta{
 flex: 1;
 box-sizing: border-box;
 text-align: center;
 padding: 0;
 margin: 0;
}
.weui-media-box__info__meta .iconfont{
  margin:0 10rpx;
}
.reward {
  border-left: 4px solid #79BD8F;
  padding-left: 10rpx;
  /* color: red; */
  background-color: #f5f5f5;
  margin-top:10rpx;
}


.book-item{
  width: 50%;
  background-color: white;

}