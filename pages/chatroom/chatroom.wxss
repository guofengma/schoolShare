/* pages/chateRoom/chatroom.wxss */

.chat-wrap{
  margin: 15rpx;
}
.chat-other,.chat-my{
  position: relative;
}
.chat-wrap .avatar{
  position: absolute;
  top: 0;
  margin: 0;
}
.chat-other {
  padding-left: 120rpx;
  text-align: left;
}
.chat-my{
  padding-right: 120rpx;
  text-align: right;
}
.chat-other .avatar{
  left: 0;
}
.chat-my .avatar{
  right: 0;
}
 .chat-item{
  position: relative;
  min-height: 120rpx;
} 

.chat-detail{
  line-height: 50rpx;
  width: 80%;
}
.chat-my  .chat-detail{
  float: right;
}
.sentFlag{
  position: absolute;
  top:10rpx;

  width: 20%;
  height: 50rpx;
}
.sentMessage{
  width: 100%;
  background-color: white;
  position: fixed;
  bottom:0;
  z-index:20;
}
.sentMessage input{
  width: 80%;
}

.inout-sent{
  height: 100%;
  
}
.btn-sent{
  float: right;
  display: inline-block;
}
