/* pages/feedback/feedback.wxss */
.zan-cell {
  position: relative;
  padding: 12px 15px;
  display: flex;
  align-items: center;
  line-height: 1.4;
  font-size: 14px;
}
.zan-field {
  padding: 7px 15px;
  color: #333;
}

.zan-field--wrapped {
  margin: 10px 15px;
  background-color: #fff;
}
.zan-cell::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 0 solid #e5e5e5;
  border-bottom-width: 1px;
  left: 15px;
  right: 0;
}
.zan-field__input {
  flex: 1;
  line-height: 1.6;
  padding: 4px 0;
  min-height: 22px;
  font-size: 14px;
}

.zan-field__placeholder {
  font-size: 14px;
}

.feedText{
  margin: 10px 15px;
  color: #ccc;
  font-size: 14px;
}
.feedText.title{
  color: #79BD8F;
}
.high{
  height: 7em;
}
.user-opton-item {
   display: block; 
  width: 90%;
  margin: 0 5%;
  text-align: center;
  height: 80rpx;
  color: white;
  background-color: #79bd8f;
  font-size: 40rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
}
.feedback-result{
  text-align: center;
  margin-top: 60rpx;
}