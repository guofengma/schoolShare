<!--pages/my/my.wxml-->
<view class='page'>
<view class="page__hd">
    <view class='icon-list'>
      <i class='iconfont .icon-saomianerweima'></i>
      <i class='iconfont .icon-yifu'></i>
    </view>
    
    <view class='user-login' wx:if="{{!hasUserInfo && canIUse}}" bindgetuserinfo="getUserInfo">立即登录</view>
    <view class='user-info' wx:else>
        <image class='user-img'src="{{userInfo.avatarUrl}}" background-size="cover"></image>
        <text class='user-name'>{{userInfo.nickName}}</text>
        <text class='points'>积分：{{points}}</text>
    </view>
    <view class='broadcast'>
       <i class='iconfont .icon-guangboxianxing'></i>
       <text class='broadcast-text'>{{broadcast}}</text>
    </view>
  </view>
<view class='page__bd'>
  <view class="weui-grids">
            <block wx:for="{{list}}" wx:key="*this">
                <navigator url="{{item.url}}" class="weui-grid" hover-class="weui-grid_active">
                    <i class="iconfont {{item.iconClass}}"></i>
                    <view class="weui-grid__label">{{item.name}}</view>
                </navigator>
            </block>
     </view>
</view>
</view>

